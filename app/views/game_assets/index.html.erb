<div class="page-header">
  <h1><%= t('.title')%></h1>
</div>
<!--検索フォーム-->
<%= form_tag game_assets_path, :method => 'get' do %>
<div class='container'>
  <p>
    <div class='col-lg-6'>
    <%= text_field_tag :search, params[:search], :class => 'form-control' %>
  </div>
  <div class='col-lg-4'>
    <%= submit_tag t('.search'), :name => nil, :class => 'col-lg-2 btn btn-info' %>
  </div>
  </p>
</div>
<% end %>
<hr>
<!--一覧-->
<div class='container col-lg-12'>
<%= will_paginate :previous_label => t('.previous_page'), :next_label => t('.next_page') %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th><%= t('.asset_name')%></th>
        <th><%= t('.asset_copy')%></th>
      </tr>
    </thead>
    <tbody>
      <% @game_assets.each do |game_asset| %>
        <tr>
          <td><%= image_tag "thumbs/thumbnail_#{game_asset.id}.png", :width => '100', :height => '100' %></td>
          <td><%= link_to game_asset.name, game_asset %></td>
          <td><%= game_asset.sales_copy %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate :previous_label => t('.previous_page'), :next_label => t('.next_page') %>
</div>

