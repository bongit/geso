<div class="page-header">
  <h1><%= t('.title')%>
      <% if params[:main_category] != nil %>
      <small><%= "#{MainCategory.find(params[:main_category]).name}" %></small>
      <% end %>
</h1>
</div>
<!--検索フォーム-->
<%= form_tag game_assets_path, :method => 'get' do %>
<div class='container-fluid'>
  <p>
    <div class='col-lg-8'>
    <%= text_field_tag :search, params[:search], :class => 'form-control' %>
  </div>
  <div class='col-lg-4'>
    <%= submit_tag t('.search'), :name => nil, :class => 'btn btn-info' %>
  </div>
  </p>
</div>
<hr>
<div class="container-fluid">
  <div class="col-lg-3">
    <% if params[:main_category] != nil %>
      <%= hidden_field_tag :main_category, @main_category%>
      <%= select_tag(:sub_category, options_from_collection_for_select(@sub_categories, :id, :name, params[:sub_category]), :prompt => "素材タイプ", :class =>'form-control', :onchange => "this.form.submit()") %>
    <% end %>
  </div>
    <div class="col-lg-3">
      <%= select_tag(:order, options_for_select(
      {"評価順"=>'rating desc', "価格"=>'price asc', "ダウンロード数"=>'downloaded_times desc'}, params[:order]
      ), :prompt => "並べ替え", :class =>'form-control', :onchange => "this.form.submit()") %>
  </div>
</div>
<% end %>

<!--一覧-->
<div class='container-fluid'>
<%= will_paginate :previous_label => t('.previous_page'), :next_label => t('.next_page'), renderer: BootstrapPagination::Rails %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>サムネイル</th>
        <th><%= t('.asset_name') %></br>作者名</th>
        <th>素材タイプ/ゲームジャンル</br>商品説明</th>
        <th>ダウンロード数</br>価格</br>評価</th>
        <th>ライセンス</th>
      </tr>
    </thead>
    <tbody>
      <% @game_assets.each do |game_asset| %>
        <tr>
          <td>
            <%= link_to image_tag("/assets/thumbs/thumbnail_#{game_asset.id}.png", :width => '100', :height => '100'), game_asset%>
          </td>
          <td><%= link_to game_asset.name, game_asset %></br><%= User.find(game_asset.user_id).name %></td>
          <td>
            <%= SubCategory.find(game_asset.sub_category).name %>/<%= Genre.find(game_asset.genre).name %></br>
            <%= game_asset.sales_copy %>
          </td>
          <td>DL：<%= game_asset.downloaded_times %></br>価格：<%= game_asset.price %>円</br>評価：<%= Review.average_rating(game_asset.id)%></td>
          <td>        
            <%= render partial: "creative_commons", locals: {:license => game_asset.license} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate :previous_label => t('.previous_page'), :next_label => t('.next_page'), renderer: BootstrapPagination::Rails %>
</div>


