<div class="page-header">
  <h1><%= "パスワード再設定" %></h1>
</div>
<%= form_for @user, :url =>'edit_new_password' , :html => { :class => "form-horizontal user" } do |f| %>
<div class="container-fulid">
  <%= render 'shared/error_messages', object: f.object %>
</div>
<div class="container-fluid">
  <div class="col-lg-6">
    <%= f.label "パスワード", :class => 'control-label' %>
    <%= f.password_field :password, :class => 'form-control' %>
    <%= error_span(@user[:password]) %>

    <%= f.label "パスワード確認", :class => 'control-label' %>
    <%= f.password_field :password_confirmation, :class => 'form-control' %>
    <%= error_span(@user[:password_confirmation]) %></br>
    
    <%= f.submit "登録", :class => 'btn btn-primary' %>
  </div>
</div>
<% end %>
